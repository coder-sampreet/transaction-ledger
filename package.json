{
  "name": "transaction-ledger",
  "version": "1.0.0",
  "private": true,
  "description": "A simple transaction ledger application",
  "license": "ISC",
  "author": {
    "name": "Sampreet Mandal",
    "email": "officialsampreet02@gmail.com"
  },
  "type": "module",
  "main": "dist/server.js",
  "directories": {
    "test": "tests"
  },
  "engines": {
    "node": ">=24.11.0"
  },
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "type-check": "tsc -p tsconfig.build.json --noEmit && tsc -p tsconfig.test.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "test": "jest --config=jest.config.mjs --runInBand",
    "test:watch": "jest --config=jest.config.mjs --watch",
    "test:integration": "jest --config=jest.config.mjs --testPathPattern=tests/.*\\.test\\.ts$ --passWithNoTests",
    "test:race": "jest --config=jest.config.mjs --testPathPattern=tests/.*race.*\\.test\\.ts$",
    "test:idempotency": "jest --config=jest.config.mjs --testPathPattern=tests/idempotency\\.test\\.ts$",
    "test:cov": "jest --config=jest.config.mjs --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^30.2.0",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prisma": "^7.1.0",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  }
}
